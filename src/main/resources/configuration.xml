<configuration>

    <!-- -->
    <!-- Twitter app consumer key and secret (see https://apps.twitter.com/) -->
    <!-- -->

    <property>
        <name>twitter.consumer.key</name>
        <value>key</value>
    </property>
    <property>
        <name>twitter.consumer.secret</name>
        <value>secret</value>
    </property>

    <!-- -->
    <!-- Facebook appId and appSecret (https://developers.facebook.com/apps) -->
    <!-- -->

    <property>
        <name>facebook.app.id</name>
        <value>id</value>
    </property>
    <property>
        <name>facebook.app.secret</name>
        <value>secret</value>
    </property>
